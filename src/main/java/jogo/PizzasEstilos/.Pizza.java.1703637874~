public class Pizza implements Ingredientes {
    private int milho = 1;
    private int calabresa = 5;
    private int frango = 9;
    private int azeitona;
    private int cebola;
    private int catupiry;

    public Pizza(int milho, int calabresa, int frango, int azeitona, int cebola, int catupiry) {
        this.milho = milho;
        this.calabresa = calabresa;
        this.frango = frango;
        this.azeitona = azeitona;
        this.cebola = cebola;
        this.catupiry = catupiry;
    }

    @Override
    public int getMilho() {
        return milho;
    }

    @Override
    public int getCalabresa() {
        return calabresa;
    }

    @Override
    public int getFrango() {
        return frango;
    }

    @Override
    public int getAzeitona() {
        return azeitona;
    }

    @Override
    public int getCebola() {
        return cebola;
    }

    @Override
    public int getCatupiry() {
        return catupiry;
    }
}

